{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/app.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development",
                "PORT": "5858"
            },
            "preLaunchTask": "Build",
            "sourceMaps": true,
            "runtimeArgs": [
                "--nolazy"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        },
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u", "tdd",
                "--colors",
                "--no-timeouts",
                "build/tests/"
            ],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "runtimeExecutable": null,
            "env": { "NODE_ENV": "testing"},
            "preLaunchTask": "Build"
        }
    ]
}